<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dzh.filemanagement"
   >


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name="com.dzh.filemanagement.core.engine.DeploymentOperation"
        android:allowBackup="true"
        android:theme="@style/AppTheme"
        android:icon="@drawable/ic_logo"
        android:screenOrientation="portrait"
        android:label="@string/app_name">
        <uses-library android:name="android.test.runner" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />

        </provider>

        <activity
            android:name="com.dzh.filemanagement.activity.MainActivity"
            android:label="@string/app_name"
             
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name="com.dzh.filemanagement.activity.ImageWallActivity"
             
             ></activity>
        <activity
            android:name="com.dzh.filemanagement.activity.VideoActivity"
             
             ></activity>
        <activity
            android:name="com.dzh.filemanagement.activity.AudioActivity"
             
             ></activity>
        <activity
            android:name="com.dzh.filemanagement.activity.DocumentsActivity"
             
             ></activity>
        <activity
            android:name="com.dzh.filemanagement.activity.ZipActivity"
             
             ></activity>
        <activity
            android:name="com.dzh.filemanagement.activity.ApplicationsActivity"
             
             ></activity>
        <activity
            android:name="com.dzh.filemanagement.activity.ApksActivity"
             
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.dzh.filemanagement.activity.AboutMeActivity"
             
             ></activity>
        <activity
            android:name="com.dzh.filemanagement.activity.WelcomActivity"
             
             ></activity>
        <activity
            android:name="com.dzh.filemanagement.activity.StartUI"
             
             
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.dzh.filemanagement.core.engine.service.delete.DeleteFileService"
            android:exported="false"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.cmcm.greendamexplorer.core.engine.service.delete.DeleteFileService" />
            </intent-filter>
        </service>
        <service
            android:name="com.dzh.filemanagement.core.engine.service.copy.CopyFileService"
            android:exported="false"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.cmcm.greendamexplorer.core.engine.service.copy.CopyFileService" />
            </intent-filter>
        </service>
    </application>

</manifest>