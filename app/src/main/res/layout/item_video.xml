<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    >

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        >

        <LinearLayout
            android:id="@+id/video_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/BColor"
            android:orientation="horizontal"
            android:padding="7dp"
            >

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp">

                <ImageView
                    android:id="@+id/file_video_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#000"
                    android:src="@mipmap/file_video"
                    android:padding="2dp"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/item_video_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="fileame"
                android:textColor="@color/textColor"/>

        </LinearLayout>

        <TextView
            android:id="@+id/file_video_delete"
            style="@style/file_item_select"
            android:background="#ff0000"
            android:text="删除"
            android:textSize="21sp"/>
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</android.support.v7.widget.CardView>
