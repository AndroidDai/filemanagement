<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.cmcm.greendamexplorer.activity"
    android:id="@+id/mNewFileDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.cmcm.greendamexplorer.view.flatui.views.FlatButton
        android:id="@+id/mBtnNewDialogNewFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="新建文件"
        app:fl_theme="@array/grass" />

    <com.cmcm.greendamexplorer.view.flatui.views.FlatButton
        android:id="@+id/mBtnNewDialogNewFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="新建文件夹"
        app:fl_textColor="main"
        app:fl_theme="@array/grass" />

    <com.cmcm.greendamexplorer.view.flatui.views.FlatButton
        android:id="@+id/mBtnNewDialogCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="取        消"
        app:fl_textColor="main"
        app:fl_theme="@array/grass" />

</LinearLayout>